{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(grep:*)"
    ]
  },
  "autoApproveTools": true,
  "autoExecute": true,
  "skipConfirmations": true,
  "automation": {
    "enabled": true,
    "mode": "full",
    "requireConfirmation": false,
    "tools": {
      "bash": {
        "autoApprove": true
      },
      "write": {
        "autoApprove": true
      },
      "edit": {
        "autoApprove": true
      },
      "read": {
        "autoApprove": true
      }
    }
  }
}